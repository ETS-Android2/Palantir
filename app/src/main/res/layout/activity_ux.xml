<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/ux_fragment"
        android:name="io.ningyuan.palantir.fragments.SceneformFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/model_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_margin="20dp"
        android:fontFamily="monospace" />

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/floating_actions_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        fab:fab_labelStyle="@style/FloatingActionButtonLabels"
        fab:fab_labelsPosition="left">

        <io.ningyuan.palantir.views.ImportButton
            android:id="@+id/import_glb_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/ic_file_upload_black_24dp"
            fab:fab_title="Import binary glTF (*.glb)" />

        <io.ningyuan.palantir.views.ImportButton
            android:id="@+id/import_obj_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/ic_file_upload_black_24dp"
            fab:fab_title="Import Wavefront OBJ (*.obj)" />

        <io.ningyuan.palantir.views.ImportButton
            android:id="@+id/import_pdb_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/ic_file_upload_black_24dp"
            fab:fab_title="Import Protein Databank file (*.pdb)"
            />

        <io.ningyuan.palantir.views.SearchButton
            android:id="@+id/import_rcsb_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/ic_file_upload_black_24dp"
            fab:fab_title="RCSB PDB Search"
        />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:layout_marginTop="1dp"
        android:visibility="invisible" />

</FrameLayout>